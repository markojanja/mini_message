<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <%- include("partials/nav") %>
    <section>
      <h1 class="main_title"><%- title %></h1>
      <% if (user) { %>
      <h3><%= user.username %></h3>
      <% } %> <% if (messages.length === 0) { %>
      <p>There are no messages yet, please add some message</p>
      <% } %>
      <div class="card_list">
        <% messages.forEach(message => { %> <%- include("partials/message_card",
        {message:message}) %> <% }) %>
      </div>
    </section>
  </body>
</html>
